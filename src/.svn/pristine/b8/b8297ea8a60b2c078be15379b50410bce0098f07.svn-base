.placeline
{       content: "";
    position: absolute;
    height: 21%;
    width: 1px;
    top: 51%;
    border: dotted 1px #bdbdbd;
    left: 3px;
}
.placepoint{
    position: absolute;
    top: 46%;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    border: 1px solid #CCCCCC;
}
.placediv
{
    margin-left: 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.divheight
{
    @media (min-width:320px) and (min-height: 360px) {
        height: 140px;
    }
    @media (min-width:360px) and (min-height: 375px) {
        height: 140px;
    }
    @media (min-width: 375px) and (min-height: 384px) {
        height: 140px;
    }
    @media (min-width: 384px) and (min-height : 412px) {
        height: 160px;
    }
    @media (min-width: 412px) and (min-height: 480px) {
        height: 160px;
    }
    @media (min-width: 412) and (min-height: 876px) {
        height: 160px;
    }
}