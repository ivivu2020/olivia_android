    background: #003C71;
    background-image: url('./assets/logo_splash.svg');
    margin: 0 auto;
    width: 200px;
    height: 160px;
    position: relative;
    background-repeat: no-repeat;
}


:host{
    --ion-color-primary:#26bed6;
}

ion-toolbar{
    text-align: center;
}
