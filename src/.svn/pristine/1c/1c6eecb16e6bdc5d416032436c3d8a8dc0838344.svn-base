<ion-header>
  <ion-toolbar style="min-height: 0px;text-align: center">
    <ion-row>
      <ion-col size="2">
        <div style="position: absolute;height: 48px;width: 48px;top: 8px;" (click)="goback()">
          <img style="height: 48px; padding: 8px;margin-top: -7px;margin-left:-14px"
            src="./assets/imgs/ios-arrow-round-back.svg">
        </div>
      </ion-col>
      <ion-col size="8" style="text-align: center;height: 48px;">

        <div style="padding-top: 6px;font-size: 20px;font-weight: bold;"><label class="text-title">Cẩm nang du lịch
            iVIVU</label>
        </div>

      </ion-col>
      <ion-col size="1">

            <!-- <img src="./assets/imgs/heart-empty-black.svg" style="width:14px;height:14px"  > -->
            <img (click)="share()" style="padding-top:10px;width: 20px" src="./assets/imgs/ic_share_black.svg" >

      </ion-col>
      <ion-col size="1">
         
              <img src="./assets/imgs/heart-empty-black.svg" style="width:20px;height:20px;margin-top: 10px"  >
            <!-- <ion-icon name="heart" color="danger" ></ion-icon> -->

        </ion-col>
    </ion-row>
  </ion-toolbar>
</ion-header>
<ion-content padding>
  <div>
    <h2 class="text-title">{{title}}</h2>
  </div>
  <!-- <label style="margin:0" style="color: #828282;font-size: 14px">
    {{date}}
  </label> -->
  <div text-wrap>
    <div class="divcss" [innerHTML]="content">

    </div>
  </div>
</ion-content>
<ion-footer padding>
<div style="text-align: right">
    <label style="margin:0" style="color: #828282;font-size: 14px">
        {{date}}
      </label>
</div>
</ion-footer>