:root{
    --ion-row-width:100%;
}

body{
    background: transparent;
}

.button {
    height: 48px;
    border-radius: 28px;
    font-size: 18px;
    margin: 8px;
}

label > p{
    margin: 2px 0;
    line-height: 20px;
}
.item-inner{
    padding-inline-end: 0;
}

::ng-deep {
    .item-inner{
        border-style: none;
    }
    .text-loading{
        text-align: center;
    }
}

.loading-wrapper.sc-ion-loading-ios {
    padding-top: 0 !important; 
    padding-bottom: 0 !important;
    height: 80px !important;
}

.loading-wrapper.sc-ion-loading-md {
    padding-top: 0 !important; 
    padding-bottom: 0 !important;
    height: 80px !important;
}
