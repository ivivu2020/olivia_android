.tabbar{
    background: #f8f8f8;
    padding: 0;
  }

  ion-tab-button {
    min-height: 3.6rem;
    font-weight: normal;
    color: rgba(60, 60, 60, 0.7);
    padding: 0;
  }

  .tabbar .tab-button[aria-selected=true] {
    color: #26bed6;
    padding: 0;
    }
    .tab-button a{
        margin: 0;
    }

    @media (min-width: 278px) and (max-width: 320px) {
        .tab-button{
            --padding-end: 0;
            font-size: 12px;
            font-weight: 500;
            letter-spacing: .03em;
        }
        
      }