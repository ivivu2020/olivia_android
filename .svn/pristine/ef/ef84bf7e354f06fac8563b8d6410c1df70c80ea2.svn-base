    <ion-label text-wrap>
      Hồ Chí Minh: 1900 1870
    </ion-label>
    <ion-label text-wrap>
      Hà Nội: 1900 2045
    </ion-label>
    <ion-label text-wrap>
      Cần Thơ: 1900 2087
    </ion-label>
  </div>

  <div style="margin-top: 15px" *ngIf="status=='RQ'">
    <div>
      <ion-label style="font-weight: bold" text-wrap>
        Cảm ơn Quý khách đã sử dụng dịch vụ iVIVU.com
      </ion-label>
    </div>
    <div>
      <ion-label text-wrap>
        Mã đặt phòng của quý khách là
        <span style="font-weight: bold">{{code}}</span>
      </ion-label>
    </div>
