        error.page="hoteldetail";
        error.func="loaddata";
        error.param = JSON.stringify(options);
        C.writeErrorLog(objError);
      }
      if(response.statusCode== 200){
    //this.http.post(url + "/mhoteldetail/" + this.HotelID, "")
