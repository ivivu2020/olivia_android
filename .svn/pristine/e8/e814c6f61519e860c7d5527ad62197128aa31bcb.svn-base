      var date = new Date(res);
      this.datecout = date;
      this.cout = moment(date).format('YYYY-MM-DD');
      this.coutdisplay = moment(sdate).format('DD-MM-YYYY');
      this.coutthu = moment(date).format('dddd');
      switch (this.coutthu) {
        case "Monday":
          this.coutthu = "Thứ 2"
          break;
        case "Tuesday":
