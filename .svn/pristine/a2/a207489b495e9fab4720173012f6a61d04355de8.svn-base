@import '~@ionic/angular/css/flex-utils.css';

:root{
    --ion-row-width:100%;
}

.button {
    height: 48px;
    border-radius: 28px;
    font-size: 18px;
    margin: 8px;
}

label > p{
    margin: 2px 0;
    line-height: 20px;
}
.item-inner{
    padding-inline-end: 0;
}

::ng-deep {
    .item-inner{
        border-style: none;
    }
    
}
