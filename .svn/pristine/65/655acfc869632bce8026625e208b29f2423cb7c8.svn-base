
  .text-title{
    font-size: 20px;
    font-weight: bold;
    text-align: center;
  }
    [col-1] {
        -webkit-box-flex: 0;
        -webkit-flex: 0 0 8.33333%;
        -ms-flex: 0 0 8.33333%;
        flex: 0 0 14.285714285714286%;
        width: 14.285714285714286%;
        max-width: 14.285714285714286%;
      }
      .col {
        background: transparent;
        border: none;
        text-align: center;
        padding: 0.6em 0;
        margin: 0;
        font-weight: bold;
        font-size: 18px;
        height: 50px;
      }
      .last-month, .next-month,.current-month {
        color: #D4D3D2;
        background: transparent;
        border: none;
        text-align: center;
        padding: 0.6em 0;
        margin: 0;
        font-weight: bold;
        font-size: 18px;
        height: 50px;
      }
      .currentDate, .otherDate {
        padding: 5px;
      }
      .currentDate {
        font-weight: bold;
        background-color: red;
        color: white;
        border-radius: 30px;
      }
      .calendar-header {
        background-color: #275A87;
        color: #FFFFFF;
      }
      .event-bullet {
        margin: 2px auto;
        height: 5px;
        width: 5px;
        background-color: green;
        border-radius: 30px;
      }
      .selected-date {
        width: 20px;
        height: 2px;
        background-color: blue;
      }
      .unselected-date {
        border: none;
      }
      .calendar-body {
        .grid {
          padding: 0;
        }
        .col:last-child {
          border-right: none;
        }
        .calendar-weekday, .calendar-date {
          text-align: center;
          margin: 0;
        }
        .calendar-weekday {
          font-weight: bold;
          background-color: #275A87;
          color: #cdcdcd;
        }
      }
      .cls-orange{
          color: #ec971f;
          font-weight:bold;
      }
      .cls-green{
          color: #477a00;
          font-weight:bold;
      }
      .col-weekend{
          color: red;
          opacity: 0.8;
      }
      .no-price{
        font-weight:bold;
        color: #D4D3D2;
        font-weight: bold;
        background: transparent;
      }
      .text-left{
          text-align: left;
          font-family: Helvetica-LightItalic;
          padding-top: 12px;
          font-weight: normal;
          font-size: 14px;
          padding: 0;
          height: 22px;
      }
      .good-price{
          color: #477a00;
      }
      .not-good-price{
        color: #ec971f;
      }
      .text-normal{
        color: #5D6D7E;
        white-space: normal;
      }
      .p-bottom-16{
        padding-bottom: 16px;
      }
      .icon-close{
        font-size: 32px;
      }
     .div-current-date{
        border: solid 1px #26bed6;
     }
     .list-md {
      margin: 0 !important;
    }
    .item-md [item-end] {
      margin: 0px 8px 0px 0;
    }
    :host{
      --ion-grid-columns:7;
    }

