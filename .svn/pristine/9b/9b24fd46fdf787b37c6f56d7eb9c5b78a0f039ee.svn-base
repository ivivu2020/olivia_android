<ion-header>
  <ion-toolbar>
      <ion-row>
          <ion-col size="10" style="text-align: center"><ion-title class="text-title">Lọc</ion-title></ion-col>
          <ion-col size="2" style="text-align: right" (click)="close()">
                <ion-note class="button-header" routerLink="/hotellist/false">
                    <ion-icon name="close" style="font-size: 2em;"></ion-icon>
                </ion-note>
          </ion-col>
      </ion-row>
    </ion-toolbar>
</ion-header>
<ion-content padding>
